<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".OnBoarding3Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <View
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#D8E5E3" />

        <View
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="#D8E5E3"/>

        <View
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="#C97865"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Cuidar de você agora ficou mais fácil"
        android:textColor="#213430"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAnt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/open_sans"
        android:text="Acesse agora o nosso catálogo, coloque seu produto no carrinho e agende um horário para buscar o produto na loja física "
        android:textColor="#62998D"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnComecar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bg_botao_ativado"
        android:drawableEnd="@drawable/seta_direita_icon"
        android:drawableRight="@drawable/seta_direita_icon"
        android:fontFamily="@font/open_sans"
        android:foregroundGravity="right"
        android:text="Começar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHighlight="#478D6C"
        android:textColorHint="#478D6C"
        android:textIsSelectable="false"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnAnt"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/bg_botao_ativado"
        android:drawableLeft="@drawable/seta_esquerda_icon"
        android:fontFamily="@font/open_sans"
        android:gravity="center|start"
        android:paddingLeft="8dp"
        android:text="Voltar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        app:srcCompat="@drawable/pg_inicial_icon031" />

</RelativeLayout>